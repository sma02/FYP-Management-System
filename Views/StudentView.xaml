<Page x:Class="FYP_Management_System.Views.StudentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FYP_Management_System.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="DG1">
        </DataGrid>
        <Grid Grid.Column="1">
            <StackPanel VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource SideBarButton}">
                        <Setter Property="Margin" Value="10 40px"/>
                    </Style>
                </StackPanel.Resources>
                <Button Click="Button_Click" Content="Add Student"/>
                <Button Content="Delete Student"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
