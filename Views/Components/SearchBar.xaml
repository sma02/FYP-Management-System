<UserControl x:Class="FYP_Management_System.Views.Components.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FYP_Management_System.Views.Components"
             mc:Ignorable="d" 
             d:Height="40" d:DesignWidth="300">
    <Grid KeyUp="SearchTextBox_KeyUp">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="60px"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="SearchTextBox" 
                 Background="{DynamicResource Control2}"
                 Foreground="{DynamicResource TextColor}"
                 MaxLines="1"/>
        <Button x:Name="SearchButton"
                Grid.Column="1" 
                Margin="0" 
                MinWidth="60px" 
                Content="Search"
                Click="Button_Click"/>
    </Grid>
</UserControl>
